<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_drawable_bottom">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:src="@drawable/baseline_remove_30"
        app:tint="@color/darkblue" />

    <Button
        android:id="@+id/btnChangePic"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="61dp"

        android:layout_marginTop="15dp"
        android:background="#FAFCFC"
        android:fontFamily="@font/poppins_semibold"
        android:paddingStart="25dp"
        android:text="@string/changePrf_button_text"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnRemoveProf"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"

        android:layout_height="61dp"
        android:background="#FAFCFC"
        android:fontFamily="@font/poppins_semibold"
        android:paddingStart="25dp"
        android:text="Remove Profile Picture"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#F44336"
        android:textSize="15sp" />
</LinearLayout>