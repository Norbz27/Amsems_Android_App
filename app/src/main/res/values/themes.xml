<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Amsems" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkblue</item>
        <item name="colorPrimaryVariant">@color/darkblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkblue</item>
        <item name="colorSecondaryVariant">@color/darkblue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorControlActivated">@color/darkblue</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.NoActionbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkblue</item>
        <item name="colorPrimaryVariant">@color/darkblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkblue</item>
        <item name="colorSecondaryVariant">@color/darkblue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorControlActivated">@color/darkblue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Style_TextView">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
    <style name="Style_menu">
        <item name="marginHorizontal">10dp</item>
    </style>
    
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_out_animation</item>
    </style>
</resources>